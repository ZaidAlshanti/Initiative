<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:fitsSystemWindows="true"
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#009688"
            android:elevation="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_1"
                android:contentDescription="Account"
                android:elevation="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_2"
                android:contentDescription="Settings"
                android:elevation="5dp" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_corner_background">

            <ImageView
                android:id="@+id/post_image"
                android:src="@drawable/img_6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/post_text"
                android:text="Clean the sidewalks"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/post_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/img_8"
                app:layout_constraintTop_toBottomOf="@+id/post_text"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Ensure buttons are placed above rectangle_1 -->




        <Button
            android:id="@+id/map"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/img_4"
            android:contentDescription="@android:string/unknownName"
            android:elevation="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="65dp" />

        <Button
            android:id="@+id/friends"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/img_5"
            android:contentDescription="Friends Activities"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />

        <!-- Ensure unique ID -->
        <Button
            android:id="@+id/second_home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_3"
            android:contentDescription="Home"
            android:elevation="1dp"
            android:layout_marginLeft="5dp" />

        <!-- Place rectangle at the very bottom -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="#009688"
            android:elevation="1dp" />

    </RelativeLayout>

</LinearLayout>