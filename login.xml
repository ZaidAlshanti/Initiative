<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/q">


    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Username Field -->


        <!-- Password Field -->
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Username"

            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <!-- Login Button -->

        <Button
            android:id="@+id/login_btn"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#498d95"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#FFFF"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/pass"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:text="Forgot password?"
        android:textAlignment="center"
        android:textColor="#498d99"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/signupText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
        android:padding="0dp"
        android:text="I don't have an account, sign in"
        android:textAlignment="center"
        android:textColor="#498d95"
        android:textSize="13sp" />



    </LinearLayout>


</RelativeLayout>