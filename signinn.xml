<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">




        <!-- Email Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="#498d95"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <!-- Username Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Username"
            android:textColor="#498d95"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Choose a username"
            android:inputType="text"
            android:padding="10dp" />

        <!-- Password Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Password"
            android:textColor="#498d95"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Choose a password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <!-- Confirm Password Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Confirm Password"
            android:textColor="#498d95"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_courner"
            android:backgroundTint="#AEEEF2F8"
            android:hint="Re-enter your password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <!-- Sign-Up Button -->
        <Button
            android:id="@+id/signup_btn"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#498d95"
            android:padding="10dp"
            android:text="Sign Up"
            android:textColor="#FFFF"
            android:textSize="15sp" />

        <!-- Redirect to Login -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="Already have an account? Log in"
            android:textAlignment="center"
            android:textColor="#498d95"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>
